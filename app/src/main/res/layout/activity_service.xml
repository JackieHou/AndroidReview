<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.qwm.androidreview.servicedemo.ServiceActivity">

    <Button
        android:textAllCaps="false"
        android:onClick="testStartService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="testStartService(开启服务)" />

    <Button
        android:textAllCaps="false"
        android:onClick="onStopService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="onStopService(停止服务)" />

    <Button
        android:onClick="testBindService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="testBindService(绑定服务)" />

    <Button
        android:onClick="testUnBindService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="testUnBindService(解绑服务)" />
    <Button
        android:onClick="getData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取值" />




</LinearLayout>
