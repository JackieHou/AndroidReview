<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/p_sys_item_ll"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/p_sys_item_header_iv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_con_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/p_sys_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小明"
            android:textSize="20sp" />

        <TextView
            android:layout_marginTop="3dp"
            android:id="@+id/p_sys_item_phone_tv"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_999999"
            android:layout_below="@+id/p_sys_item_phone_tv"
            android:text="130 0000 0000"
            android:textSize="14sp" />

        <TextView
            android:layout_marginTop="3dp"
            android:id="@+id/p_sys_item_email_tv"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:textColor="#6666ff"
            android:layout_below="@+id/p_sys_item_phone_tv"
            android:text="xm@qq.com"
            android:textSize="11sp" />


    </LinearLayout>

</LinearLayout>
