<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/p_sys_item_ll"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white"
    android:orientation="horizontal"
    tools:context=".providerdemo.ProviderDemoActivity">

    <ImageView
        android:id="@+id/p_sys_item_header_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_my" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/p_sys_item_phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="130 0000 0000"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/p_sys_item_msg_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:layout_below="@+id/p_sys_item_phone_tv"
                android:text="130 0000 0000"
                android:textSize="14sp" />


            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/p_sys_item_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text=" 07/06 13:20:20"
                android:textSize="11sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
